<div class="page-content">
    <div class="container-fluid">
        <div class="form-group row">
            <center>
                <h1>FACULTAD DEL JEFE DE DEPARTAMENTO</h1>
                <h2>HABILITAR SILABUS</h2>
            </center>
        </div>
        <div class="form-group row">
            <label class="col-md-2 text-right">ESCUELA PROFESIONAL:</label>
            <div class="col-md-4">
                <input class="form-control" type="text" placeholder="ESCUELA PROFESIONAL" />
            </div>
        </div>
        <div class="form-group row">
            <label class="col-md-2 text-right">CODIGO DOCENTE:</label>
            <div class="col-md-2">
                <input class="form-control" type="text" placeholder="CODIGO DOCENTE" />
            </div>
            <label class="col-md-2 text-right">DOCENTE:</label>
            <div class="col-md-4">
                <input class="form-control" type="text" placeholder="DOCENTE" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-2 text-right">CURSO:</label>
            <div class="col-md-2">
                <input class="form-control input-sm" type="text" placeholder="CURSO" />
            </div>
            <label class="col-md-2 text-right label-sm">AÑO-SEMESTE:</label>
            <div class="col-md-4">
                <select class="form-control input-sm">
                    <option>AÑO-SEMESTRE</option>
                </select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <button class="btn btn-sm btn-info" onclick="buscarSilabos()">
                    Buscar
                </button>
            </div>
            <div class="col-md-4">
            </div>
        </div>

        <hr />
        <div class="row">
            <div class="col-md-12">
                <table id="tblSilabos" class="table table-striped table-bordered" style="width:100%"></table>
            </div>
        </div>
    </div>

    <script>
        var tblSilabos;
        $(document).ready(function () {
            tblSilabos = $('#tblSilabos').DataTable({
                dom: '<lBf<t>ip>',
                scrollX: true,
                scrollY: true,
                ajax: {
                    url: '/Silabos/ListarSilabos',
                    type: 'POST',
                    datatype: 'json',
                    data: function () {
                    }
                },
                columns: [
                    { title: "DOCENTE", data: "Estado", visible: true },
                    { title: "CURSO", data: "Estado", visible: true },
                    { title: "ESTADO", data: "Estado", visible: true }
                ],
                serverSide: false,
                deferLoading: 0,
                iDisplayLength: 5,
                language: dataTableLanguage
            });
        });
        function buscarSilabos() {
            tblSilabos.ajax.reload();
        }
    </script>
</div>
